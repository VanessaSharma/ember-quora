{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Your Question</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="datePosted">Date</label>
      {{input value=datePosted id="datePosted"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <button {{action 'saveQuestion1'}}>Save</button>
   </form>
 </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
