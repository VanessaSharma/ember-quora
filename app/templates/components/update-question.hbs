{{#if updateQuestionForm}}
  <h4>Update {{question.content}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="datePosted">Date</label>
        {{input value=datePosted id="datePosted" placeholder=question.datePosted}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=question.category}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
   </div>
  {{else}}
    <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
